{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "declaration": true,
      "outDir": "./dist/cjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "paths": {
        "shogun-core": ["./node_modules/shogun-core", "./src/types/shogun-core.d.ts"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }